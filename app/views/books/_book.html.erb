<li class="list-group-item" id="book-<%= book.api_id %>">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag book.image_link, class: "img-responsive thumbnail"%>
    </div>
    <div class="col-md-8">
      <h2><%= book.title %></h2>
      <h4><%= book.title %></h4>
    </div>
    <%= form_for(:books, :url=>{:action=>"delete", :controller=>"books"}, method: :delete ) do |f| %>
      <%= f.hidden_field :book_id, :value => book.api_id %>
      <%= f.submit "Remove", class:"btn btn-primary"%>
    <% end %>
  </div>
</li>
